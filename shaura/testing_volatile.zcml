<configure xmlns="http://pylonshq.com/pyramid">

  <include package="pyramid_zcml"/>

  <utility
    provides="shaura_core.interfaces.IObjectManager"
    factory=".testing_volatile.ObjectManager"
    />

  <subscriber
    for="shaura_core.interfaces.IObjectCreatedEvent"
    handler=".testing_volatile.putCreatedObject"
    />

  <subscriber
    for="shaura_core.interfaces.IObjectModifiedEvent"
    handler=".testing_volatile.putCreatedObject"
    />

  <subscriber
    for="shaura_core.interfaces.IObjectObsoletedEvent"
    handler=".testing_volatile.deleteObsoletedObject"
    />

</configure>
